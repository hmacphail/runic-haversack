---
const { title, url, description, pubDate, author, image } = Astro.props;
const logoImage = "/rh_large.png";
---
<div class="w-full pt-6 relative">
  <div class="mx-auto 2xl:max-w-7xl p-4">
    <!-- Gradient Background -->
    <div class="w-full absolute inset-0 bg-gradient-to-br from-regal-200 to-regal-600"></div>

    <!-- Resizing white box -->
    <div
      class="relative 2xl:max-w-7xl lg:mt-24 max-w-6xl md:p-10 mx-auto p-4"
    >
      <div
        class="bg-white max-w-xl"
      >
        <div class="px-4 pt-4 pb-8">
          <!-- Logo -->
          <img
              class="w-full h-full"
              src={logoImage}
              alt={"Runic Haversack"}
          />
